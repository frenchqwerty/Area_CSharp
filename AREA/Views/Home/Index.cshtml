    <script>
        function updateFacebookStatus(newStatus) {
            FB.api(
                "/me/feed",
                "POST",
                {
                    "message": newStatus
                },
                function (response) {
                    if (response && !response.error) {
                        console.log("Facebook statut update with : " + newStatus);
                    }
                    else
                        alert("Facebook statut not update");
                }
            );
        }
    </script>

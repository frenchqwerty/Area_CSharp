        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">

                <div class="row">
                    <div class="col-md-12" style="text-align:center; margin-top: 4%; font-size: 3em; font-family:'Helvetica Neue', 'Arial Narrow', Arial, sans-serif; font-weight: bold;">
                        <span style="color:#526ba8;">@ViewBag.userId</span>
                    </div>


                    <div class="col-lg-12 main-chart">


                        <div class="row" style="margin-top: 5%;">

                            <!--MODAL FOR OFFICE 365-->

                            <div class="col-md-4 text-center">
                                <img onclick="document.getElementById('office').style.display='block'" src="~/img/office365.png" style="width: 20%;" />
                            </div>

                            <div id="office" class="w3-modal">
                                <div class="w3-modal-content">
                                    <header class="w3-container w3-teal" style="background-color:#f65314!important">
                                        <span onclick="document.getElementById('office').style.display='none'"
                                              class="w3-button w3-display-topright">&times;</span>
                                        <h2>Choose an action for office 365</h2>
                                    </header>
                                    <div class="w3-container">
                                        <p onclick="document.getElementById('office').style.display='none' ;document.getElementById('triggerOffice1').style.display='block'">Some text..</p>
                                        <p onclick="document.getElementById('office').style.display='none' ;document.getElementById('triggerOffice2').style.display='block'">Some text..</p>
                                    </div>
                                </div>
                            </div>

                            <!--TRIGGER OFFICE 1-->
                            <div id="triggerOffice1" class="w3-modal">
                                <div class="w3-modal-content">
                                    <header class="w3-container w3-teal" style="background-color:#f65314!important">
                                        <span onclick="document.getElementById('triggerOffice1').style.display='none'"
                                              class="w3-button w3-display-topright">&times;</span>
                                        <h2>Choose an action for office 365</h2>
                                    </header>
                                    <div class="w3-container">
                                        <p> triggerOffice1</p>
                                        <p>triggerOffice1</p>
                                    </div>
                                </div>
                            </div>

                            <!--TRIGGER OFFICE 2-->
                            <div id="triggerOffice2" class="w3-modal">
                                <div class="w3-modal-content">
                                    <header class="w3-container w3-teal" style="background-color:#f65314!important">
                                        <span onclick="document.getElementById('triggerOffice2').style.display='none'"
                                              class="w3-button w3-display-topright">&times;</span>
                                        <h2>Choose an action for office 365</h2>
                                    </header>
                                    <div class="w3-container">
                                        <p>triggerOffice2</p>
                                        <p>triggerOffice2</p>
                                    </div>
                                </div>
                            </div>

                            <!--END MODAL FOR OFFICE 365-->
                            <!--MODAL FOR FACEBOOK-->

                            <div class="col-md-4 text-center">
                                <img onclick="document.getElementById('facebook').style.display='block'" src="~/img/facebook.png" style="width: 30%;" />
                            </div>

                            <div id="facebook" class="w3-modal">
                                <div class="w3-modal-content">
                                    <header class="w3-container w3-teal" style="background-color:#3f51b5!important">
                                        <span onclick="document.getElementById('facebook').style.display='none'"
                                              class="w3-button w3-display-topright">&times;</span>
                                        <h2>Choose an action for facebook</h2>
                                        <div class="fb-login-button" data-scope="public_profile, email, publish_actions" data-width="500" data-max-rows="1" data-size="large" data-button-type="continue_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="true" style="display: table; margin: 0 auto"></div>
                                    </br>
                                    </header>
                                    <div class="w3-container">
                                        <br />
                                        <div id="statueToEdit" contenteditable="true" class="well" data-ph="Mettez à jour votre statut !" style="min-height: 500px; height: auto;"></div>
                                        <style>
                                            [contentEditable=true]:empty:not(:focus):before {
                                                content: attr(data-ph);
                                                }
                                        </style>
                                        <button type="button" class="btn btn-primary" onclick="editText()">Valider</button>
                                        <script>
                                            function editText() {
                                                var newStatut = document.getElementById("statueToEdit").innerHTML;
                                                updateFacebookStatus(newStatut);
                                            }
                                        </script>
                                    </div>
                                </div>
                            </div>
                            <!--END MODAL FOR FACEBOOK-->


                            <!--MODAL FOR TWITTER-->

                            <div class="col-md-4 text-center">
                                <img onclick="document.getElementById('twitter').style.display='block'" src="~/img/twitter.png" style="width: 28%;" />
                            </div>

                            <div id="twitter" class="w3-modal">
                                <div class="w3-modal-content">
                                    <header class="w3-container w3-teal" style="background-color:#7bc5f8!important">
                                        <span onclick="document.getElementById('twitter').style.display='none'"
                                              class="w3-button w3-display-topright">&times;</span>
                                        <h2>Choose an action for twitter</h2>
                                        <form action="/Account/ExternalLogin" method="post">
                                            @Html.AntiForgeryToken()
                                            <div id="socialLoginList">
                                                <p>
                                                    <button type="submit" class="btn btn-default" id="Twitter" name="provider" value="Twitter" title="Connexion avec votre compte Twitter">Twitter</button>
